{
  "$schema": "http://json-schema.org/schema#",
  "title": "Quotation Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "image": {
      "type": "string",
      "format": "uri"
    },
    "description": {
      "type": "string"
    },
    "datePublished": {
      "type": "string",
      "format": "date-time"
    },
    "spokenByCharacter": {
      "oneOf": [
        { "type": "string", "format": "$ref:Person" },
        { "type": "string", "format": "$ref:Organization" },
        { "$ref": "Person.json" },
        { "$ref": "Organization.json" }
      ]
    },
    "text": {
      "type": "string"
    }
  },
  "required": ["name"],
  "additionalProperties": false
}