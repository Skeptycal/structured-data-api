{
  "$schema": "http://json-schema.org/schema#",
  "title": "Question",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "text": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "image": {
      "type": "string",
      "format": "uri"
    },
    "dateCreated": {
      "type": "string",
      "format": "date-time"
    },
    "dateModified": {
      "type": "string",
      "format": "date-time"
    },
    "datePublished": {
      "type": "string",
      "format": "date-time"
    },
    "acceptedAnswer": {
      "$ref": "Answer.json"
    },
    "mainEntity": {
      "$ref": "Thing.json"
    },
    "mentions": {
      "type": "array",
      "items": {
        "$ref": "Thing.json"
     }
    },
    "keywords": {
      "type": "string"
    },
    "temporalCoverage": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["name"],
  "additionalProperties": false
}