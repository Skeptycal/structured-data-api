{
  "$schema": "http://json-schema.org/schema#",
  "title": "Person Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "image": {
      "type": "string",
      "format": "uri"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "birthDate": {
      "type": "string",
      "format": "date-time"
    },
    "birthPlace": {
      "oneOf": [
        { "type": "string", "format": "$ref:Place" },
        { "$ref": "Place.json" }
      ]
    },
    "deathDate": {
      "type": "string",
      "format": "date-time"
    },
    "deathPlace": {
      "oneOf": [
        { "type": "string", "format": "$ref:Place" },
        { "$ref": "Place.json" }
      ]
    },
    "affiliation": {
      "oneOf": [
        { "type": "string", "format": "$ref:Organization" },
        { "$ref": "Organization.json" }
      ]
    },
    "address": {
      "oneOf": [
        { "type": "string" },
        { "$ref": "Place.json#/definitions/PostalAddress" }
      ]
    }
  },
  "required": ["name"],
  "additionalProperties": false
}