{
  "$schema": "http://json-schema.org/schema#",
  "title": "Event Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "image": {
      "type": "string",
      "format": "uri"
    },
    "startDate": {
      "type": "string",
      "format": "date-time"
    },
    "endDate": {
      "type": "string",
      "format": "date-time"
    },
    "location": {
      "oneOf": [
        { "type": "string", "format": "$ref:Place" },
        { "$ref": "Place.json" },
        { "$ref": "Place.json#/definitions/PostalAddress" }
      ]
    }
  },
  "required": ["name"],
  "additionalProperties": false
}